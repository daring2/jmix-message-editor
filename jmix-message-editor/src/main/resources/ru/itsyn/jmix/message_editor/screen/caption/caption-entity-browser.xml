<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://captionEntityBrowser.caption"
      focusComponent="table">
    <data readOnly="true">
        <collection id="tableDc" class="ru.itsyn.jmix.message_editor.entity.CaptionEntity">
            <loader id="tableDl"/>
        </collection>
    </data>
    <facets>
<!--        <dataLoadCoordinator auto="true"/>-->
        <urlQueryParameters>
            <pagination component="pagination"/>
        </urlQueryParameters>
        <settings auto="true"/>
<!--        <presentations auto="true"/>-->
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>

    <layout expand="table" spacing="true">
        <hbox margin="true" spacing="true" alignItems="CENTER">
            <label text="msg://entityComboBox.caption" setFor="entityFilterField"/>
            <comboBox id="entityFilterField" width="400px"/>
        </hbox>
        <hbox id="buttonsPanel" classNames="buttons-panel">
            <button id="refreshBtn" action="table.refresh"/>
            <button id="editBtn" action="table.edit"/>
            <button id="applyBtn" action="table.apply"/>
            <simplePagination id="pagination" dataLoader="tableDl"/>
        </hbox>
        <dataGrid id="table" width="100%" minHeight="400px" dataContainer="tableDc"
                  columnReorderingAllowed="true">
            <actions>
                <action id="refresh" type="list_refresh"/>
                <action id="edit" type="list_edit"/>
                <action id="apply" text="msg://apply"/>
            </actions>
            <columns>
<!--                <column property="id" collapsed="true"/>-->
                <column property="key"/>
                <column property="text"/>
            </columns>
        </dataGrid>
        <hbox id="lookupActions" visible="false">
            <button id="selectBtn" action="selectAction"/>
            <button id="discardBtn" action="discardAction"/>
        </hbox>
    </layout>
</view>
