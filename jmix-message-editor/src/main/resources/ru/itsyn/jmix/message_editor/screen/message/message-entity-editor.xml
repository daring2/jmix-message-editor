<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://messageEntityEditor.caption"
      focusComponent="form">
    <data>
        <instance id="editDc" class="ru.itsyn.jmix.message_editor.entity.MessageEntity">
            <fetchPlan extends="_base"/>
            <loader/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <settings id="settingsFacet" auto="true"/>
    </facets>
    <actions>
        <action id="saveAndCloseAction" type="detail_saveClose"/>
        <action id="saveAction" type="detail_save"/>
        <action id="closeAction" type="detail_close" text="msg:///actions.Close"/>
    </actions>
    <layout expand="editActions" spacing="true">
        <formLayout id="form" dataContainer="editDc" width="100%"
                    classNames="form-layout" labelsPosition="ASIDE">
            <responsiveSteps>
                <responsiveStep minWidth="0" columns="1"/>
                <responsiveStep minWidth="50em" columns="2"/>
            </responsiveSteps>
            <formItem><textField id="keyField" property="key" colspan="2"/></formItem>
            <formItem><checkbox id="activeField" property="active"/></formItem>
            <formItem><comboBox id="localeField" property="locale"/></formItem>
            <formItem colspan="2"><textArea id="textField" property="text" height="8em"/></formItem>
            <formItem colspan="2" label="msg://ru.itsyn.jmix.message_editor.entity/MessageEntity.defaultText">
                <textArea id="defaultTextField" height="8em" readOnly="true"/>
            </formItem>
        </formLayout>
        <hbox id="editActions" spacing="true" margin="true" alignSelf="CENTER">
            <button id="saveAndCloseBtn" action="saveAndCloseAction"/>
            <button id="saveBtn" action="saveAction"/>
            <button id="closeBtn" action="closeAction"/>
        </hbox>
    </layout>
</view>