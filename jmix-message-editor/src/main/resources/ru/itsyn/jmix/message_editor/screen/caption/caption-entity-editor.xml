<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://captionEntityEditor.caption"
      focusComponent="form">
    <data>
        <instance id="editDc" class="ru.itsyn.jmix.message_editor.entity.CaptionEntity">
            <loader/>
        </instance>
        <collection id="messagesDc" class="ru.itsyn.jmix.message_editor.entity.MessageEntity">
            <fetchPlan extends="_base"/>
            <loader id="messagesDl"/>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <settings id="settingsFacet" auto="true"/>
    </facets>
    <actions>
        <action id="saveAndCloseAction" type="detail_saveClose"/>
        <action id="saveAction" type="detail_save"/>
        <action id="closeAction" type="detail_close" text="msg:///actions.Close"/>
    </actions>
    <layout expand="editActions" spacing="true">
        <hbox spacing="true" width="100%" expand="keyField" alignItems="CENTER">
            <label setFor="keyField" text="msg://ru.itsyn.jmix.message_editor.entity/MessageEntity.key"/>
            <textField id="keyField" dataContainer="editDc" property="key"/>
        </hbox>
        <label text="msg://captions" setFor="messagesTable"/>
        <dataGrid id="messagesTable" width="100%" height="400px" dataContainer="messagesDc"
                  selectionMode="NONE" editorBuffered="false">
            <columns>
                <column property="locale"/>
                <column property="text"/>
                <column property="active" textAlign="CENTER"/>
                <column key="defaultText" header="msg://ru.itsyn.jmix.message_editor.entity/MessageEntity.defaultText"/>
            </columns>
        </dataGrid>
        <hbox id="editActions" spacing="true" margin="true" alignSelf="CENTER">
            <button id="saveAndCloseBtn" action="saveAndCloseAction"/>
            <button id="saveBtn" action="saveAction"/>
            <button id="closeBtn" action="closeAction"/>
        </hbox>
    </layout>
</view>