<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://messageEntityBrowser.caption"
      focusComponent="table">
    <data readOnly="true">
        <collection id="tableDc" class="ru.itsyn.jmix.message_editor.entity.MessageEntity">
            <fetchPlan extends="_base"/>
            <loader id="tableDl">
                <query>select e from msg_MessageEntity e order by e.key</query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <pagination component="pagination"/>
            <genericFilter component="filter"/>
        </urlQueryParameters>
        <settings auto="true"/>
        <!--        <presentations auto="true"/>-->
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>

    <layout expand="table" spacing="true">
        <genericFilter id="filter" dataLoader="tableDl" summaryText="msg://filter">
            <responsiveSteps>
                <responsiveStep minWidth="0px" columns="1"/>
                <responsiveStep minWidth="800px" columns="2"/>
                <responsiveStep minWidth="1200px" columns="3"/>
            </responsiveSteps>
        </genericFilter>
        <hbox id="buttonsPanel" classNames="buttons-panel">
            <button id="createBtn" action="table.create"/>
            <button id="editBtn" action="table.edit"/>
            <button id="removeBtn" action="table.remove"/>
            <button id="applyBtn" action="table.apply"/>
            <simplePagination id="pagination" dataLoader="tableDl"/>
        </hbox>
        <dataGrid id="table" width="100%" minHeight="400px" dataContainer="tableDc"
                  columnReorderingAllowed="true">
            <actions>
                <action id="create" type="list_create"/>
                <action id="edit" type="list_edit"/>
                <action id="remove" type="list_remove"/>
                <action id="apply" text="msg://apply"/>
            </actions>
            <columns>
<!--                <column property="id" collapsed="true"/>-->
                <column property="key"/>
                <column property="locale"/>
                <column property="active"/>
                <column property="text"/>
<!--                <column property="createdDate" collapsed="true"/>-->
<!--                <column property="createdBy" collapsed="true"/>-->
<!--                <column property="lastModifiedDate" collapsed="true"/>-->
<!--                <column property="lastModifiedBy" collapsed="true"/>-->
            </columns>
        </dataGrid>
        <hbox id="lookupActions" visible="false">
            <button id="selectBtn" action="selectAction"/>
            <button id="discardBtn" action="discardAction"/>
        </hbox>
    </layout>
</view>
